@model HospiEnCasa.App.Presentacion.Pages.AddMedicoModel
@{
}
<form method="post">
    <div asp-validation-sumary="ModelOnly"></div>

  <div class="form-group">
    <label>Nombre</label>
    <input type="text" asp-for="Medico.Nombre" class="form-control"   placeholder="Digite el nombre">
    <span  asp-validation-for="Medico.Nombre" class="text-danger"></span>
  </div>

   <div class="form-group">
    <label>Especialidad</label>
    <input type="text" asp-for="Medico.Especialidad" class="form-control"   placeholder="Digite la Especialidad del Medico">
    <span  asp-validation-for="Medico.Especialidad" class="text-danger"></span>
  </div>

 <div class="form-group">
    <label>Codigo</label>
    <input type="text" asp-for="Medico.Codigo" class="form-control"   placeholder="Digite el codigo del  Medico">
    <span  asp-validation-for="Medico.Codigo" class="text-danger"></span>
  </div>

  <div class="form-group">
    <label>Genero</label>
    <select  asp-for="Medico.Genero" class="form-control">
        <option selected>Genero..</option>
        <option value=0>Masculino</option>
         <option value=1>Femenino</option>
    </select>
  </div>
   
  
  <button type="submit" class="btn btn-primary" asp-page-handler="Save">crear</button>
</form>